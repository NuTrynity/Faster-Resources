<?xml version="1.0" encoding="utf-8"?>
<Patch>
<!-- Vanilla Component Recipe -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="Make_ComponentIndustrial"]/workAmount</xpath>
        <value>
            <workAmount>3000</workAmount>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/RecipeDef[defName="Make_ComponentIndustrial"]/skillRequirements/Crafting</xpath>
        <value>
            <Crafting>4</Crafting>
        </value>
    </Operation>

    <!-- Deep Drill -->
   <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="DeepDrill"]/constructionSkillPrerequisite</xpath>
        <value>
            <constructionSkillPrerequisite>0</constructionSkillPrerequisite>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="DeepDrill"]/costList</xpath>
        <value>
            <costList>
                <Steel>100</Steel>
            </costList>
        </value>
    </Operation>

    <!-- Long Range Scanner -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="LongRangeMineralScanner"]/costList</xpath>
        <value>
            <costList>
                <Steel>200</Steel>
                <ComponentIndustrial>6</ComponentIndustrial>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="LongRangeMineralScanner"]/constructionSkillPrerequisite</xpath>
        <value>
            <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
        </value>
    </Operation>

    <!-- Ground Penetrating Scanner -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GroundPenetratingScanner"]/costList</xpath>
        <value>
            <costList>
                <Steel>150</Steel>
                <ComponentIndustrial>4</ComponentIndustrial>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GroundPenetratingScanner"]/constructionSkillPrerequisite</xpath>
        <value>
            <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
        </value>
    </Operation>
</Patch>
