<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Deep Drill -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/StatDef[defName="DeepDrillingSpeed"]/defaultBaseValue</xpath>
        <value>
            <defaultBaseValue>2</defaultBaseValue>
        </value>
    </Operation>

    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="DeepDrill"]/comps/li[@Class="CompProperties_Power"]</xpath>
    </Operation>

    <!-- Ground Penetrating Scanner -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GroundPenetratingScanner"]/comps/li[@Class="CompProperties_ScannerMineralsDeep"]/scanFindMtbDays</xpath>
        <value>
            <scanFindMtbDays>5</scanFindMtbDays>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="GroundPenetratingScanner"]/comps/li[@Class="CompProperties_ScannerMineralsDeep"]/scanFindGuaranteedDays</xpath>
        <value>
            <scanFindGuaranteedDays>5</scanFindGuaranteedDays>
        </value>
    </Operation>

    <!-- Long Range Mineral Scanner -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="LongRangeMineralScanner"]/comps/li[@Class="CompProperties_LongRangeMineralScanner"]/scanFindMtbDays</xpath>
        <value>
            <scanFindMtbDays>3</scanFindMtbDays>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="LongRangeMineralScanner"]/comps/li[@Class="CompProperties_LongRangeMineralScanner"]/scanFindGuaranteedDays</xpath>
        <value>
            <scanFindGuaranteedDays>3</scanFindGuaranteedDays>
        </value>
    </Operation>
</Patch>
