<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <RecipeDef>
        <defName>MakeComponents</defName>
        <label>Make components</label>
        <description>Craft basic components from steel at the machining table.</description>
        <jobString>Making components.</jobString>
        <workAmount>3000</workAmount>
        <workSkill>Crafting</workSkill>
        <workSkillLearnFactor>1.0</workSkillLearnFactor>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <allowMixingIngredients>true</allowMixingIngredients> 

        <recipeUsers>
            <li>TableMachining</li>
        </recipeUsers>

        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li> </thingDefs>
                </filter>
                <count>30</count> 
            </li>
        </ingredients>

        <fixedIngredientFilter>
            <thingDefs>
                <li>Steel</li>
            </thingDefs>
        </fixedIngredientFilter>

        <products>
            <Component>1</Component> 
        </products>

        <researchPrerequisite>Machining</researchPrerequisite>
    </RecipeDef>
</Defs>